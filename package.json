{
  "name": "attracker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=dev nodemon --exec 'node index.js'",
    "test": "NODE_ENV=test npm run lint && mocha --recursive",
    "test:dev": "NODE_ENV=test nodemon --exec 'mocha --recursive -R min'",
    "prod": "NODE_ENV=prod node index.js",
    "lint": "eslint src/** test/**",
    "doc:generate": "apidoc -i src/routes/ -o apidoc/",
    "doc:deploy": "node scripts/deploy-docs.js",
    "doc": "npm run doc:generate && npm run doc:deploy",
    "docker": "docker-compose up",
    "docker:background": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:test": "docker-compose -p tests run -p 2000 --rm api npm run test",
    "docker:test:dev": "docker-compose -p tests run -p 2000 --rm api npm run test:dev"
  },
  "author": "forforeach",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.2.2",
    "mocha": "^5.2.0",
    "mongoose": "^5.1.3",
    "morgan": "^1.9.0",
    "nodemon": "^1.17.5",
    "supertest": "3.0.0",
    "uuid": "^3.2.1",
    "validator": "8.0.0",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "eslint": "^4.19.1",
    "gh-pages": "^1.2.0"
  },
  "apidoc": {
    "name": "Attracker",
    "version": "0.0.1",
    "description": "Attracker API documentation",
    "title": "Attracker API"
  }
}
